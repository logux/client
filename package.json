{
  "name": "@logux/client",
  "version": "0.11.1",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "clean": "rimraf coverage/ test/demo/build/ test/demo/.cache",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint . && check-dts && size-limit && yaspeller *.md && yarn build",
    "build": "cd test/demo && yarn build",
    "start": "cd test/demo && yarn start"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/client",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./vue": "./vue/index.js",
    "./react": "./react/index.js",
    "./package.json": "./package.json",
    "./badge/styles": "./badge/styles/index.js"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.7.0",
    "@logux/state": "^0.1.0",
    "react": ">=16.8.0",
    "vue": ">=3.0.11"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@logux/actions": "^0.1.0",
    "fast-json-stable-stringify": "^2.1.0",
    "nanodelay": "^2.0.0",
    "nanoevents": "^6.0.0",
    "nanoid": "^3.1.23"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@logux/core": "^0.7.0",
    "@logux/eslint-config": "^45.4.2",
    "@logux/sharec-config": "^0.10.2",
    "@logux/state": "^0.1.0",
    "@parcel/optimizer-cssnano": "^2.0.0-nightly.640",
    "@parcel/optimizer-htmlnano": "^2.0.0-nightly.640",
    "@parcel/packager-css": "^2.0.0-nightly.640",
    "@parcel/packager-html": "^2.0.0-nightly.640",
    "@parcel/transformer-css": "^2.0.0-nightly.640",
    "@parcel/transformer-html": "^2.0.0-nightly.640",
    "@parcel/transformer-postcss": "^2.0.0-nightly.640",
    "@parcel/transformer-posthtml": "^2.0.0-nightly.640",
    "@peculiar/webcrypto": "^1.1.7",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/vue": "^6.4.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.3",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.4",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@vue/compiler-sfc": "^3.0.11",
    "check-dts": "^0.4.4",
    "clean-publish": "^2.2.0",
    "colorette": "^1.2.2",
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^32.0.1",
    "fake-indexeddb": "^3.1.2",
    "jest": "^27.0.0-next.2",
    "lint-staged": "^11.0.0",
    "parcel": "^2.0.0-nightly.640",
    "postcss": "^8.2.15",
    "prettier": "^2.3.0",
    "print-snapshots": "^0.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.4.1",
    "size-limit": "^4.10.2",
    "svgo": "^2.3.0",
    "ts-jest": "^27.0.0-next.4",
    "typescript": "^4.2.4",
    "vue": "^3.0.11",
    "yaspeller": "^7.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.svg": "svgo",
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "jest/no-conditional-expect": "off",
      "symbol-description": "off",
      "no-console": "off"
    },
    "overrides": [
      {
        "files": "indexed-store/index.test.ts",
        "rules": {
          "import/order": "off"
        }
      },
      {
        "files": "encrypt-actions/*",
        "rules": {
          "node/no-unsupported-features/node-builtins": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "test/demo/build",
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "CrossTabClient",
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "4 KB"
    },
    {
      "name": "Helpers",
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }",
        "./badge/styles/index.js": "{ badgeStyles }"
      },
      "limit": "3 KB"
    },
    {
      "name": "React",
      "import": {
        "./index.js": "{ CrossTabClient, defineSyncMap, changeSyncMap }",
        "./react/index.js": "{ ClientContext, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "6 KB"
    },
    {
      "name": "Vue",
      "import": {
        "./index.js": "{ CrossTabClient, defineSyncMap, changeSyncMap }",
        "./vue/index.js": "{ loguxPlugin, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "logux",
      "resubscriptions",
      "resubscribe",
      "GraphQL",
      "UI",
      "UX",
      "DevTools",
      "io",
      "ES",
      "JSDoc",
      "TypeDoc",
      "WebSocket",
      "roadmap",
      "ESM",
      "js",
      "Vue"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.10.2"
  }
}
