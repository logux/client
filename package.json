{
  "name": "@logux/client",
  "version": "0.21.1",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "clean": "rm -Rf coverage/ test/demo/dist/",
    "test:lint": "eslint .",
    "test:size": "size-limit",
    "test:types": "check-dts",
    "test:build": "pnpm build",
    "test:coverage": "vitest run --coverage",
    "test": "pnpm run /^test:/",
    "build": "vite build test/demo/ -m production --base /client/",
    "start": "vite test/demo/ --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.org/",
  "repository": "logux/client",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./vue": "./vue/index.js",
    "./react": "./react/index.js",
    "./preact": "./preact/index.js",
    "./package.json": "./package.json",
    "./badge/styles": "./badge/styles/index.js"
  },
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.9.0",
    "@nanostores/preact": ">=0.0.0",
    "@nanostores/react": ">=0.0.0",
    "@nanostores/vue": ">=0.0.0",
    "nanostores": "^0.9.0 || ^0.10.0 || ^0.11.0 || ^1.0.0",
    "preact": ">=10.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=16.8.0",
    "vue": ">=3.3.2"
  },
  "peerDependenciesMeta": {
    "@nanostores/preact": {
      "optional": true
    },
    "@nanostores/react": {
      "optional": true
    },
    "@nanostores/vue": {
      "optional": true
    },
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@logux/actions": "^0.4.0",
    "fast-json-stable-stringify": "^2.1.0",
    "nanodelay": "^2.0.2",
    "nanoevents": "^9.1.0",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@logux/core": "^0.9.0",
    "@logux/eslint-config": "^55.2.1",
    "@nanostores/preact": "^1.0.0",
    "@nanostores/react": "^1.0.0",
    "@nanostores/vue": "^1.0.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.1.2",
    "@vue/compiler-sfc": "^3.5.13",
    "check-dts": "^0.9.0",
    "clean-publish": "^5.1.0",
    "eslint": "^9.26.0",
    "fake-indexeddb": "^6.0.0",
    "globals": "^16.0.0",
    "happy-dom": "^17.4.6",
    "nanospy": "^1.0.0",
    "nanostores": "^1.0.1",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.3",
    "preact": "10.26.5",
    "print-snapshots": "^0.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "size-limit": "^11.2.0",
    "svgo": "^3.3.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vitest": "^3.1.2",
    "vue": "^3.5.13"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "name": "CrossTabClient",
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "4 KB"
    },
    {
      "name": "Helpers",
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }"
      },
      "limit": "3 KB"
    },
    {
      "name": "React",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./react/index.js": "{ ClientContext, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    },
    {
      "name": "Vue",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./vue/index.js": "{ loguxPlugin, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    }
  ]
}
