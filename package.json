{
  "name": "@logux/client",
  "version": "0.9.3",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "spell": "yaspeller-ci *.md",
    "clean": "rimraf coverage/ test/demo/build/ test/demo/.cache",
    "test:ci": "jest-ci --coverage && eslint-ci . && check-dts && size-limit && yarn spell",
    "test": "yarn test:ci && yarn build",
    "build": "yarn clean && parcel build --dist-dir ./test/demo/build --cache-dir ./test/demo/.cache --public-url ./ ./test/demo/index.html",
    "start": "parcel --dist-dir ./test/demo/build --cache-dir ./test/demo/.cache ./test/demo/index.html --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/client",
  "sideEffects": false,
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "@logux/core": "logux/core#next"
  },
  "dependencies": {
    "nanoevents": "^5.1.8",
    "nanoid": "^3.1.12"
  },
  "devDependencies": {
    "@logux/core": "logux/core#next",
    "@logux/eslint-config": "^41.0.0",
    "@logux/sharec-config": "^0.7.6",
    "@peculiar/webcrypto": "^1.1.3",
    "@size-limit/dual-publish": "^4.6.0",
    "@size-limit/preset-small-lib": "^4.6.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@types/ws": "^7.2.7",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "check-dts": "^0.3.3",
    "colorette": "^1.2.1",
    "dual-publish": "^0.11.0",
    "eslint": "^7.11.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^23.0.0",
    "fake-indexeddb": "^3.1.2",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.4.1",
    "nanodelay": "^1.0.3",
    "parcel": "^2.0.0-nightly.420",
    "print-snapshots": "^0.3.2",
    "rimraf": "^3.0.2",
    "size-limit": "^4.6.0",
    "svgo": "^1.3.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3",
    "yaspeller": "^7.0.0",
    "yaspeller-ci": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.svg": "svgo",
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": "indexed-store/index.test.ts",
        "rules": {
          "import/order": "off"
        }
      },
      {
        "files": "encrypt-actions/*",
        "rules": {
          "node/no-unsupported-features/node-builtins": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "test/demo/build",
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "CrossTabClient",
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "3 KB"
    },
    {
      "name": "Helpers",
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }",
        "./badge/styles/index.js": "{ badgeStyles }"
      },
      "limit": "3 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "logux",
      "resubscriptions",
      "resubscribe",
      "GraphQL",
      "UI",
      "UX",
      "DevTools",
      "io",
      "ES",
      "JSDoc",
      "TypeDoc",
      "WebSocket",
      "roadmap"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.6"
  }
}
