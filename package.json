{
  "name": "@logux/client",
  "version": "0.18.4",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "clean": "rm -Rf coverage/ test/demo/dist/",
    "test": "vitest run --coverage && eslint . && pnpm clean && check-dts && size-limit && pnpm build",
    "build": "vite build test/demo/ -m production --base /client/",
    "start": "vite test/demo/ --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/client",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./vue": "./vue/index.js",
    "./react": "./react/index.js",
    "./preact": "./preact/index.js",
    "./package.json": "./package.json",
    "./badge/styles": "./badge/styles/index.js"
  },
  "engines": {
    "node": "^16.0.0 || >=18.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.8.0",
    "@nanostores/preact": ">=0.0.0",
    "@nanostores/react": ">=0.0.0",
    "@nanostores/vue": ">=0.0.0",
    "nanostores": "^0.6.0 || ^0.7.0",
    "preact": ">=10.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=16.8.0",
    "vue": ">=3.2.30"
  },
  "peerDependenciesMeta": {
    "@nanostores/preact": {
      "optional": true
    },
    "@nanostores/react": {
      "optional": true
    },
    "@nanostores/vue": {
      "optional": true
    },
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@logux/actions": "^0.3.0",
    "fast-json-stable-stringify": "^2.1.0",
    "nanodelay": "^2.0.2",
    "nanoevents": "^7.0.1",
    "nanoid": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@logux/core": "^0.8.1",
    "@logux/eslint-config": "^49.0.0",
    "@nanostores/preact": "^0.3.1",
    "@nanostores/react": "^0.4.1",
    "@nanostores/vue": "^0.6.1",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/vue": "^7.0.0",
    "@types/node": "^18.16.0",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitest/coverage-c8": "^0.30.1",
    "@vue/compiler-sfc": "^3.2.47",
    "check-dts": "^0.7.1",
    "clean-publish": "^4.2.0",
    "eslint": "^8.39.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "fake-indexeddb": "^4.0.1",
    "happy-dom": "^9.9.2",
    "nanospy": "^0.5.0",
    "nanostores": "^0.7.4",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.23",
    "preact": "10.13.2",
    "print-snapshots": "^0.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.2.4",
    "svgo": "^3.0.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.1",
    "vitest": "^0.30.1",
    "vue": "^3.2.47"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "no-console": "off",
      "camelcase": "off"
    },
    "overrides": [
      {
        "files": "*.test.*",
        "globals": {
          "it": "readonly",
          "expect": "readonly"
        }
      },
      {
        "files": "indexed-store/index.test.ts",
        "rules": {
          "import/order": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "test/demo/dist",
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "CrossTabClient",
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "4 KB"
    },
    {
      "name": "Helpers",
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }"
      },
      "limit": "3 KB"
    },
    {
      "name": "React",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./react/index.js": "{ ClientContext, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    },
    {
      "name": "Vue",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./vue/index.js": "{ loguxPlugin, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    }
  ]
}
