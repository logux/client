{
  "name": "@logux/client",
  "version": "0.8.1",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "spell": "yaspeller *.md",
    "clean": "rimraf api.md coverage/ test/demo/build/ test/demo/.cache",
    "test": "jest --coverage && eslint . && check-dts && size-limit && yarn spell && yarn build",
    "build": "parcel build --experimental-scope-hoisting -d ./test/demo/build --cache-dir ./test/demo/.cache --public-url ./ ./test/demo/index.html",
    "start": "parcel serve -d ./test/demo/build --cache-dir ./test/demo/.cache ./test/demo/index.html --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/client",
  "sideEffects": false,
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@logux/core": "^0.5.2",
    "browser-supports-log-styles": "^1.1.7",
    "nanoevents": "^5.1.5",
    "nanoid": "^3.1.3"
  },
  "devDependencies": {
    "@logux/eslint-config": "^36.1.2",
    "@logux/sharec-config": "^0.6.2",
    "@size-limit/dual-publish": "^4.4.5",
    "@size-limit/preset-small-lib": "^4.4.5",
    "check-dts": "^0.3.0",
    "dual-publish": "^0.10.0",
    "eslint": "^6.8.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^18.0.1",
    "fake-indexeddb": "^3.0.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "nanodelay": "^1.0.1",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "size-limit": "^4.4.5",
    "svgo": "^1.3.2",
    "yaspeller": "^6.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint",
    "*.svg": "svgo"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "eslintIgnore": [
    "test/demo/build"
  ],
  "size-limit2": [
    {
      "path": "./client/index.js",
      "import": "{ Client }",
      "limit": "9 KB"
    }
  ],
  "size-limit": [
    {
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "8 KB"
    },
    {
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }",
        "./badge/styles/index.js": "{ badgeStyles }"
      },
      "limit": "3 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "logux",
      "resubscriptions",
      "resubscribe",
      "GraphQL",
      "UI",
      "UX",
      "DevTools",
      "io",
      "ES",
      "JSDoc",
      "TypeDoc",
      "WebSocket"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.6.2"
  }
}
