{
  "name": "@logux/client",
  "version": "0.20.1",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "clean": "rm -Rf coverage/ test/demo/dist/",
    "test:lint": "eslint .",
    "test:size": "size-limit",
    "test:types": "check-dts",
    "test:build": "pnpm build",
    "test": "vitest run --coverage && pnpm run /^test:/",
    "build": "vite build test/demo/ -m production --base /client/",
    "start": "vite test/demo/ --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.org/",
  "repository": "logux/client",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./vue": "./vue/index.js",
    "./react": "./react/index.js",
    "./preact": "./preact/index.js",
    "./package.json": "./package.json",
    "./badge/styles": "./badge/styles/index.js"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.8.0",
    "@nanostores/preact": ">=0.0.0",
    "@nanostores/react": ">=0.0.0",
    "@nanostores/vue": ">=0.0.0",
    "nanostores": "^0.9.0",
    "preact": ">=10.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=16.8.0",
    "vue": ">=3.3.2"
  },
  "peerDependenciesMeta": {
    "@nanostores/preact": {
      "optional": true
    },
    "@nanostores/react": {
      "optional": true
    },
    "@nanostores/vue": {
      "optional": true
    },
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@logux/actions": "^0.3.1",
    "fast-json-stable-stringify": "^2.1.0",
    "nanodelay": "^2.0.2",
    "nanoevents": "^9.0.0",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@logux/core": "github:logux/core#next",
    "@logux/eslint-config": "^52.0.2",
    "@nanostores/preact": "^0.5.0",
    "@nanostores/react": "^0.7.1",
    "@nanostores/vue": "^0.10.0",
    "@peculiar/webcrypto": "^1.4.3",
    "@size-limit/preset-small-lib": "^11.0.1",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/vue": "^8.0.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitest/coverage-v8": "^1.1.3",
    "@vue/compiler-sfc": "^3.4.10",
    "check-dts": "^0.7.2",
    "clean-publish": "^4.2.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "fake-indexeddb": "^5.0.2",
    "happy-dom": "^13.0.0",
    "nanospy": "^1.0.0",
    "nanostores": "^0.9.5",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.33",
    "preact": "10.15.1",
    "print-snapshots": "^0.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^11.0.1",
    "svgo": "^3.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.3",
    "vue": "^3.4.10"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "no-console": "off",
      "camelcase": "off"
    }
  },
  "eslintIgnore": [
    "test/demo/dist",
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "CrossTabClient",
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "4 KB"
    },
    {
      "name": "Helpers",
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }"
      },
      "limit": "3 KB"
    },
    {
      "name": "React",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./react/index.js": "{ ClientContext, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    },
    {
      "name": "Vue",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./vue/index.js": "{ loguxPlugin, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    }
  ]
}
