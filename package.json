{
  "name": "@logux/client",
  "version": "0.15.1",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "clean": "rm -Rf coverage/ test/demo/build/ test/demo/.cache",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage && eslint . && check-dts && size-limit && pnpm build",
    "build": "vite build test/demo/ -m production --base /client/",
    "start": "vite test/demo/ --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/client",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./vue": "./vue/index.js",
    "./react": "./react/index.js",
    "./preact": "./preact/index.js",
    "./package.json": "./package.json",
    "./badge/styles": "./badge/styles/index.js"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.7.0",
    "@nanostores/preact": ">=0.0.0",
    "@nanostores/react": ">=0.0.0",
    "@nanostores/vue": ">=0.0.0",
    "nanostores": "^0.5.0",
    "preact": ">=10.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "vue": ">=3.2.30"
  },
  "peerDependenciesMeta": {
    "@nanostores/preact": {
      "optional": true
    },
    "@nanostores/react": {
      "optional": true
    },
    "@nanostores/vue": {
      "optional": true
    },
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@logux/actions": "^0.2.3",
    "fast-json-stable-stringify": "^2.1.0",
    "nanodelay": "^2.0.2",
    "nanoevents": "^6.0.2",
    "nanoid": "^3.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.7",
    "@jest/globals": "^27.5.1",
    "@logux/core": "^0.7.3",
    "@logux/eslint-config": "^46.1.1",
    "@nanostores/preact": "^0.1.3",
    "@nanostores/react": "^0.1.5",
    "@nanostores/vue": "^0.5.5",
    "@peculiar/webcrypto": "^1.3.2",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/preact": "^2.0.1",
    "@testing-library/react": "^12.1.4",
    "@testing-library/vue": "^6.5.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@vue/compiler-sfc": "^3.2.31",
    "check-dts": "^0.6.6",
    "clean-publish": "^4.0.0",
    "eslint": "^8.11.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "fake-indexeddb": "^3.1.7",
    "jest": "^27.5.1",
    "nanostores": "^0.5.12",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.11",
    "preact": "^10.6.6",
    "print-snapshots": "^0.4.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.8",
    "svgo": "^2.8.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vue": "^3.2.31"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "useESM": true,
        "isolatedModules": true
      }
    },
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "no-console": "off",
      "camelcase": "off"
    },
    "overrides": [
      {
        "files": "*.test.*",
        "globals": {
          "it": "readonly",
          "expect": "readonly"
        }
      },
      {
        "files": "indexed-store/index.test.ts",
        "rules": {
          "import/order": "off"
        }
      },
      {
        "files": "encrypt-actions/*",
        "rules": {
          "node/no-unsupported-features/node-builtins": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "test/demo/dist",
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "CrossTabClient",
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "4 KB"
    },
    {
      "name": "Helpers",
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }"
      },
      "limit": "3 KB"
    },
    {
      "name": "React",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./react/index.js": "{ ClientContext, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    },
    {
      "name": "Vue",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./vue/index.js": "{ loguxPlugin, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    }
  ]
}
